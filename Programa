package handball;
import	java.util.Scanner; import java.util.List; import java.util.ArrayList; 
public class Programa {
	public static void main(String[] args) {
	Scanner sc = new Scanner(System.in);
	Campeonato c = new Campeonato();
	System.out.print("Digite o ID do campeonato: ");
    c.setId(sc.nextInt());
    System.out.print("Digite o ano do campeonato: ");
    c.setAno(sc.nextInt());
    System.out.print("Digite o nome do campeonato: ");	sc.nextLine();
    c.setNome(sc.nextLine());
    System.out.println("Inclua 3 times no campeonato");
    
    List<Time> time = new ArrayList<>();
    List<Estadio> estadios = new ArrayList<>();
    
    for (int i = 0; i < 3; i++) {	// Adiciona tres times ao campeonato
        
    	Time t = new Time();
        Estadio est = new Estadio();
        Endereco end = new Endereco();
        //Time:
        System.out.printf("\nDados sobre o time %d:\n\n", i + 1);
        System.out.printf("Digite o id do %dº time: ", i + 1);
        t.setId(sc.nextInt());
        System.out.printf("Digite o nome do %dº time: ", i + 1);  sc.nextLine();
        t.setNome(sc.nextLine());	 
        //Estadio:
        System.out.printf("Digite o ID do estadio do time %d: ", i + 1);
        est.setId(sc.nextInt());
        System.out.printf("Digite o nome do estadio do time %d: ", i + 1);	sc.nextLine();
        est.setNome(sc.nextLine());
        //Endereco:
        System.out.print("Digite o ID do endereço do estádio: ");
        end.setId(sc.nextInt());
        System.out.print("Digite o logradouro do estádio: ");	sc.nextLine();
        end.setLagradouro(sc.nextLine());
        System.out.print("Digite o número do estádio: ");
        end.setNumero(sc.nextInt());
        System.out.print("Digite o bairro do estádio: ");	sc.nextLine();
        end.setBairro(sc.nextLine());
        System.out.print("Digite o complemento do estádio: ");
        end.setComplemento(sc.nextLine());
        
        est.setEndereco(end); // Associe o endereço ao estádio
        t.setEstadio(est); // Associe o estádio ao time
        time.add(t);
        estadios.add(est);
    }
    for (int i = 0; i < time.size(); i++) {
        Time t = time.get(i);
        Estadio est = estadios.get(i);

        System.out.println("\nTime: " + t);
    }
    sc.close();
	}
}

